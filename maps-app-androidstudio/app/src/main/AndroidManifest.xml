<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.esri.android.mapsapp" >

<uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@drawable/basemaps_launcher"
                 android:theme="@style/AppTheme">

    <activity
            android:name="com.esri.android.mapsapp.MapsAppActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.esri.android.mapsapp.account.SignInActivity"
            android:label="@string/title_sign_in_activity"
            android:launchMode="standard"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="adjustResize" /></application>

</manifest>
